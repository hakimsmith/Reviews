@model Reviews.Model.Movie

@{
    Layout = "/Views/Shared/_default.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Single</title>
</head>
<body>

    <main>
        <img src="~/Images/@Model.ImageUrl" alt="Alternate Text" />

    <br />
        <h3>@Model.Title</h3>
        <p>@Model.Description</p>
    <br />
        <a href="/Review/CreateReview/@Model.MovieId">Create Review</a>
        <br />
        <br />

        @foreach (var review in Model.Reviews)
        {
            <p>@review.Content</p>
            <br />

            <a href="/Review/DeleteReview/@review.ReviewId">Delete Review</a>
            <a href="/Review/EditReview/@review.ReviewId">Edit Review</a>
        }


    </main>
</body>
</html>
